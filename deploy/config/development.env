# Twitch Ollama Chatbot - Development Configuration Template
# Copy this file to .env in your project root for development

# Database Configuration (Development)
DATABASE_TYPE=sqlite
DATABASE_URL=./dev_chatbot.db

# Ollama Configuration (Development)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1
OLLAMA_TIMEOUT=30

# Twitch Configuration
TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret
TWITCH_CHANNELS=your_test_channel

# Authentication Token Encryption (Optional in development)
# TOKEN_ENCRYPTION_KEY=your_base64_encryption_key

# Content Filtering
CONTENT_FILTER_ENABLED=true
BLOCKED_WORDS_FILE=./blocked_words.txt

# Logging Configuration (Development)
LOG_LEVEL=DEBUG
LOG_FORMAT=console
# LOG_FILE=./logs/chatbot.log

# Resource Management (Development Settings)
MEMORY_WARNING_MB=256
MEMORY_CRITICAL_MB=512
DISK_WARNING_PERCENT=90
DISK_CRITICAL_PERCENT=95
MESSAGE_RETENTION_DAYS=7
METRICS_RETENTION_DAYS=3
CLEANUP_INTERVAL_MINUTES=120

# Development-specific settings
# Lower thresholds for faster testing
DEFAULT_MESSAGE_THRESHOLD=5
DEFAULT_SPONTANEOUS_COOLDOWN=60
DEFAULT_RESPONSE_COOLDOWN=10
DEFAULT_CONTEXT_LIMIT=50