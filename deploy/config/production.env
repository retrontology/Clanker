# Twitch Ollama Chatbot - Production Configuration Template
# Copy this file to /opt/twitch-ollama-chatbot/.env and configure your values

# Database Configuration
DATABASE_TYPE=sqlite
DATABASE_URL=/opt/twitch-ollama-chatbot/data/chatbot.db

# For MySQL in production (recommended for high-traffic deployments)
# DATABASE_TYPE=mysql
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_USER=chatbot
# MYSQL_PASSWORD=your_secure_mysql_password
# MYSQL_DATABASE=twitch_bot

# Ollama Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1
OLLAMA_TIMEOUT=30

# Twitch Configuration
TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret
TWITCH_CHANNELS=channel1,channel2,channel3

# Authentication Token Encryption
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
TOKEN_ENCRYPTION_KEY=your_base64_encryption_key

# Content Filtering
CONTENT_FILTER_ENABLED=true
BLOCKED_WORDS_FILE=/opt/twitch-ollama-chatbot/blocked_words.txt

# Logging Configuration (Production)
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/opt/twitch-ollama-chatbot/logs/chatbot.log

# Resource Management (Production Settings)
MEMORY_WARNING_MB=1024
MEMORY_CRITICAL_MB=2048
DISK_WARNING_PERCENT=80
DISK_CRITICAL_PERCENT=90
MESSAGE_RETENTION_DAYS=90
METRICS_RETENTION_DAYS=30
CLEANUP_INTERVAL_MINUTES=30

# Performance Tuning
# Increase for high-traffic channels
# DEFAULT_MESSAGE_THRESHOLD=30
# DEFAULT_SPONTANEOUS_COOLDOWN=300
# DEFAULT_RESPONSE_COOLDOWN=60
# DEFAULT_CONTEXT_LIMIT=200